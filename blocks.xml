<?xml version="1.0" encoding="UTF-8"?>
<palette>
    
    <block
		tag="fitness-init"
		spec="init fitness"
		code='com.polydes.fitness.Fitness.initialize();'
		type="action"
		color="gray"
		returns="void">
		<fields/>
	</block>

	<block
		tag="fitness-request-permissions"
		spec="request fitness permissions"
		code='com.polydes.fitness.Fitness.call("requestPermissions");'
		type="action"
		color="gray"
		returns="void">
		<fields/>
	</block>

	<block
		tag="fitness-rescind-permissions"
		spec="rescind fitness permissions"
		code='com.polydes.fitness.Fitness.call("rescindPermissions");'
		type="action"
		color="gray"
		returns="void">
		<fields/>
	</block>

	<block
		tag="fitness-subscribe-to-step-recording"
		spec="start recording steps in background"
		code='com.polydes.fitness.Fitness.call("trySubscribeToStepRecording");'
		type="action"
		color="gray"
		returns="void">
		<fields/>
	</block>

	<block tag="fitness-steps" spec="steps" code="steps" type="normal" color="blue" returns="int" hidden="true">
		<fields/>
	</block>

	<block
		tag="fitness-read-step-history-data"
		spec="read step history from %2 until %3 -- %1"
		code='com.polydes.fitness.Fitness.call("tryReadStepHistoryData", "(JJLorg/haxe/lime/HaxeObject;)V", [#2, #3, {"callback": new function(steps:Int) { #0 }}]);'
		type="wrapper"
		color="gray"
		returns="void">
		<fields>
			<code-block order="0"/>
			<attached-block order="1" tag="fitness-steps"/>
			<int order="2"/>
			<int order="3"/>
		</fields>
	</block>

	<block
		tag="fitness-check-permissions"
		spec="fitness permissions are approved"
		code='com.polydes.fitness.Fitness.get("allPermissionsApproved")'
		type="normal"
		color="gray"
		returns="boolean">
		<fields/>
	</block>

	<block
		tag="fitness-register-step-sensor-listener"
		spec="start listening to live step sensor every %2 seconds -- %1"
		code='com.polydes.fitness.Fitness.call("tryRegisterStepSensorListener", "(ZLorg/haxe/lime/HaxeObject;)V", [#2, {"callback": new function(steps:Int) { #0 }}]);'
		type="wrapper"
		color="gray"
		returns="void">
		<fields>
			<code-block order="0"/>
			<attached-block order="1" tag="fitness-steps"/>
			<int order="2"/>
		</fields>
	</block>

	<block
		tag="fitness-unregister-step-sensor-listener"
		spec="stop listening to live step sensor"
		code='com.polydes.fitness.Fitness.call("tryUnregisterStepSensorListener")'
		type="action"
		color="gray"
		returns="void">
		<fields/>
	</block>

	<block
		tag="fitness-current-time"
		spec="current time"
		code='com.polydes.fitness.Fitness.get("currentTime")'
		type="normal"
		color="gray"
		returns="int">
		<fields/>
	</block>

</palette>